<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <LinearLayout
        android:id="@+id/ll_pelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_idpelanggan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_namapelanggan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pelanggan"
            android:textSize="21sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_nopelanggan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Pelanggan"
            android:textSize="21sp" />
        <TextView
            android:id="@+id/tv_alamatpelanggan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat Pelanggan"
            android:textSize="21sp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <LinearLayout
        android:id="@+id/ll_pengeluaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_idpengeluaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_namapengeluaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama barang"
            android:textSize="21sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_jumlahpengeluaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jumlah pengeluaran"
            android:textSize="21sp" />
        <TextView
            android:id="@+id/tv_hargapengeluaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="harga pengeluran"
            android:textSize="21sp"/>
        <TextView
            android:id="@+id/tv_tanggalpengeluaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tanggal pengeluran"
            android:textSize="21sp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>